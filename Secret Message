let secretMessage = ['Learning', 'is', 'not', 'about', 'what', 'you', 'get', 'easily', 'the', 'first', 'time,', 'it', 'is', 'about', 'what', 'you', 'can', 'figure', 'out.', '-2015,', 'Chris', 'Pine,', 'Learn', 'JavaScript'];

console.log(secretMessage.pop());
console.log(secretMessage);
// 마지막 문자열을 제거하기 위해서 .pop() 사용
console.log(secretMessage.length);
console.log(secretMessage);
// secretMessage 의 문자열 갯수를 파악하기 위해서, .length를 사용
secretMessage.push('to','Program');
// secretMessage 에 'to', 'Program' 을 마지막에 넣음
console.log(secretMessage.indexOf('easily'));
// indexOf 를 사용해서, 'easily' 의 index를 파악
secretMessage[7]='right';
console.log(secretMessage);
// 'easily' 를 'right' 으로 바꿈
console.log(secretMessage.shift());
console.log(secretMessage);
// 배열에 제일 앞에 있는 문자열을 제거하는 메서드 .shift() 를 사용
console.log(secretMessage.unshift('Programming'));
console.log(secretMessage);
// 배열에 제일 앞에 'Programming' 문자열을 넣음
console.log(secretMessage.splice(6,5,'know'));
console.log(secretMessage);
//get, right, the, first, time 을 제거하고 그 자리에 know 를 넣는다.
console.log(secretMessage.join(' '));
// 배열에 있는 모든 요소들을 붙인다.
